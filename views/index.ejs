<% include ./partials/header.ejs %>

<div
  class="w-full h-screen bg-center bg-cover bg-[url(https://images.unsplash.com/photo-1615716039130-2d84e4bef125?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D)] flex items-center justify-center gap-10"
>
  <div class="flex items-center justify-center gap-10">
    <div
      class="textcover w-[70vw] h-96 sm:w-1/2 px-10 py-5 text-white text-center"
    >
      <h1 class="text-4xl text-purple-500 font-semibold mb-10">
        Welcome To <br />
        <span class="text-purple-800 text-8xl">picSphere</span>
      </h1>

      <p class="text-md text-center text-zinc-600 mb-4 font-poppins">
        Unleash Your Creativity and Dive into a World of Captivating Images! 🌟
      </p>

      <p class="text-md text-center text-zinc-600 mb-4 font-poppins">
        "Transform Your Images with Ease! From Background Removal to Sharing,
        PicSphere has got you covered! 🚀"
      </p>
      <p class="text-md text-center text-zinc-600 mb-4 font-poppins">
        "🌐 Explore. Create. Share. Elevate Your Visual Experience with
        PicSphere - Where Every Image Tells a Story! 📖"
      </p>
    </div>

    <div
      class="login w-[60vw] sm:w-1/2 md:w-1/3 lg:w-1/4 xl:w-1/4 bg-gradient-to-r from-violet-300 to-violet-500 shadow-xl shadow-indigo-500/50 rounded-[20px] px-10 py-6"
    >
      <div
        class="w-[50px] h-[50px] rounded-full bg-cover bg-center bg-[url(https://i.pinimg.com/736x/1e/b0/fa/1eb0fab3ca3ebb7e088fe38587dbb500.jpg)] mb-3 ml-24 sm:ml-30 md:ml-30 xl:ml-[7vw]"
      ></div>
      <h1
        class="text-xl text-center mb-4 text-white leading-none capitalize font-semibold"
      >
        Login here
      </h1>

      <% if(error.length > 0){ %>
      <p class="text-red-500"><%= error %></p>
      <%} %>

      <form action="/login" method="post">
        <label class="text-zinc-800 text-xs capitalize">name</label>
        <input
          class="border-2 rounded-lg mt-1 block w-full px-3 py-2 bg-gradient-to-r from-violet-300 to-violet-500 placeholder:text-white"
          type="text"
          name="username"
          placeholder="name"
        />
        <label class="text-zinc-800 text-xs capitalize" for="">password</label>
        <input
          class="border-2 rounded-lg mt-1 block w-full px-3 py-2 bg-gradient-to-r from-violet-300 to-violet-500 placeholder:text-white"
          type="password"
          name="password"
          placeholder="password"
        />
        <a class="text-zinc-700 font-semibold inline-block mt-2" href="#"
          >Forget password?</a
        >
        <input
          class="border-2 mt-2 block w-full px-3 py-2 bg-gradient-to-r from-violet-400 to-purple-900 hover:bg-gradient-to-l shadow-lg shadow-grey text-white rounded-full"
          type="submit"
        />
        <p
          class="text-[8px] mt-3 w-3/4 mx-auto text-center font-semibold text-zinc-700"
        >
          By continuing, you agree to Pinterest's Terms of Service; Opens a new
          tab and acknowledge that you've read our Privacy Policy; Opens a new
          tab. Notice at collection; Opens a new tab.
        </p>
      </form>
      <a
        class="inline-block text-[12px] text-xs text-center w-full text-blue-800 font-semibold"
        href="/register"
        >don't have and account?</a
      >
    </div>
  </div>
</div>

<script
  src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"
  integrity="sha512-7eHRwcbYkK4d9g/6tD/mhkf++eoTHwpNM9woBxtPUBWm67zeAfFC+HrdoE2GanKeocly/VxeLvIqwvCdk7qScg=="
  crossorigin="anonymous"
  referrerpolicy="no-referrer"
></script>

<script src="../javascripts/index.js"></script>

<% include ./partials/footer.ejs %>
