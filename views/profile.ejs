<% include ./partials/header.ejs %>


<div
  class="profile w-full min-h-screen rounded-lg bg-gradient-to- from-purple-400 to-purple-700 text-white py-16"
>
  <form
    id="uploadform"
    hidden
    action="/fileupload"
    method="post"
    enctype="multipart/form-data"
  >
    <input type="file" name="image" />
  </form>

  <div
    class="profdets flex flex-col items-center mt-[5px] bg-gradient-to-r from-violet-300 to-violet-500 px-5 py-5 w-[60%] mx-auto rounded-lg shadow-xl shadow-indigo-500/50"
  >
    <div class="relative">
     
      <div class="w-32 h-32 rounded-full mb-2 overflow-hidden">
        <img
        class="w-full h-full object-cover"
        src="/images/uploads/<%= user.profileImage %>"
        alt=""
      />
      </div>
    </div>

    <h2 class="text-1xl font-semibold text-black"><%= user.name %> </h2>
    <h3 class="text-md font-semibold text-black">@<%= user.username %></h3>
    <h3 class="text-xs font-semibold text-zinc-700"><%= user.bio %></h3>
    <div class="flex gap-5">
      <a
      href="/edit"
      class="px-10 mt-3 py-2 rounded-full   bg-gradient-to-r from-violet-500 to-purple-900 hover:bg-gradient-to-l  shadow-lg shadow-grey font-semibold text-xs"
      >Edit
    </a>
    <a
      href="/logout"
      class="px-10 mt-3 py-2 rounded-full bg-gradient-to-r  bg-gradient-to-r from-violet-500 to-purple-900 hover:bg-gradient-to-l  shadow-lg shadow-grey font-semibold text-xs"
      >Logout
    </a>
    </div>
    <a href="/add"
      class="px-10 mt-3 py-2 rounded-lg text-xs bg-gradient-to-r  bg-gradient-to-r from-violet-500 to-purple-900 hover:bg-gradient-to-l  shadow-lg shadow-grey font-semibold"
    >
      Add New Post
    </a>
  </div>

  <div class="cards px-[5vw] flex flex-wrap gap-10">
    <a href="/show/posts/">
      <div class="card mt-8">
        <div class="w-52 h-40 rounded-lg bg-zinc-200 overflow-hidden">
          <img 
          class="h-full w-full object-cover"
          src="https://images.unsplash.com/photo-1504805572947-34fad45aed93?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="">
          </div>
        <!-- <a href="/show/posts" class="inline-block font-semibold text-xl mt-2 text-zinc-800">Your Uploads</a> -->
        <h1 class="inline-block font-semibold text-xl mt-2 text-zinc-800">Your Uploads</h1>
        <h3 class="font-semibold text-xs opacity-60 text-zinc-700"><%= user.posts.length %> Post</h3>
      </div>
    </a>

   
    
  </div>
</div>



<% include ./partials/footer.ejs %>